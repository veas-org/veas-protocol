{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["@veas/biome-config/base"],
  "files": {
    "ignore": ["*.d.ts", "*.d.ts.map", ".turbo/**", "build/**", "coverage/**", "dist/**"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noParameterAssign": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  }
}
